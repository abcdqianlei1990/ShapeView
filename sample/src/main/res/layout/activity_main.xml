<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <cn.channey.shapeview.ShapeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_strokeWidth="1dp"
        app:shape_radius="20dp"
        app:shape_strokeColor="@color/colorPrimary"
        app:shape_solid="@color/white"
        app:shape_topLeftRadius="20dp"
        app:shape_topRightRadius="10dp"
        app:shape_bottomRightRadius="20dp"
        app:shape_bottomLeftRadius="10dp"/>

</android.support.constraint.ConstraintLayout>